{
  "title": "Change right_command to Esc and Control",
  "rules": [
	{
	  "description": "Post Esc if right_command is tapped, Control if held.",
	  "manipulators": [
        {
    "type": "basic",
    "from": {
        "key_code": "right_command",
        "modifiers": {
            "optional": [
                "any"
            ]
        }
    },
    "to": [
        {
            "key_code": "left_control",
            "lazy": true
        }
    ],
    "to_if_alone": [
        {
            "key_code": "escape"
        }
    ]
}
	  ]
	}
  ]
}
