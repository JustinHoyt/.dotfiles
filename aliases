get_default_branch() {
  git remote show origin | sed -n '/HEAD branch/s/.*: //p'
}

# retry with sudo
alias s='sudo $(fc -ln -1)'

# apt
alias apts='apt-cache search --names-only'
alias aptshow='apt-cache show'
alias aptinst='sudo apt-get install -V'
alias aptupd='sudo apt-get update'
alias aptupg='sudo apt-get dist-upgrade -V && sudo apt-get autoremove'
alias aptupgd='sudo apt-get update && sudo apt-get dist-upgrade -V && sudo apt-get autoremove'
alias aptrm='sudo apt-get remove'
alias aptpurge='sudo apt-get remove --purge'
alias chkup='/usr/lib/update-notifier/apt-check -p --human-readable'
alias chkboot='cat /var/run/reboot-required'
alias pkgfiles='dpkg --listfiles'

# tmux
alias txl='tmux ls'
alias txn='tmux new -s'
alias txa='tmux a -t'

# git

alias g='git'
alias get='git'

# log
alias gg='git log --graph --all --pretty=format:'\''%C(bold)%h%Creset%C(magenta)%d%Creset %s %C(yellow)<%an> %C(cyan)(%cr)%Creset'\'' --abbrev-commit --date=relative'
alias ggf='git log --graph --date=short --pretty=format:'\''%C(auto)%h %Cgreen%an%Creset %Cblue%cd%Creset %C(auto)%d %s'\'''
alias ggs='gg --stat'
alias ggup='git log --branches --not --remotes --no-walk --decorate --oneline' # FROM https://stackoverflow.com/questions/39220870/in-git-list-names-of-branches-with-unpushed-commits
alias gll='git log --graph --pretty=oneline --abbrev-commit'
alias gnew='git log HEAD@{1}..HEAD@{0}' # Show commits since last pull, see http://blogs.atlassian.com/2014/10/advanced-git-aliases/
alias gwc='git whatchanged'
gs() {
  main=$(get_default_branch)
  num_commits=$(git rev-list --count  origin/"$main"..."$main")
  num_commits_to_show=$(( $num_commits < 5 ? 5 : $num_commits ))
  git fetch && echo "" && git status -s &&  echo "" && gg HEAD~${num_commits_to_show}...@{upstream}
}

# add
alias ga='git add && gs'
alias gaa='git add -A && gs'
alias gap='git add -p && gs'
alias gav='git add -v && gs'

# branch
alias gb='git branch && gs'
alias gba='git branch --all && gs'
alias gbd='git branch -d && gs'
alias gbD='git branch -D && gs'
alias gbl='git branch --list && gs'
alias gbla='git branch --list --all && gs'
alias gblr='git branch --list --remotes && gs'
alias gbm='git branch --move && gs'
alias gbr='git branch --remotes && gs'
alias gbt='git branch --track && gs'
alias gdel='git branch -D && gs'

# for-each-ref
alias gbc='git for-each-ref --format="%(authorname) %09 %(if)%(HEAD)%(then)*%(else)%(refname:short)%(end) %09 %(creatordate)" refs/remotes/ --sort=authorname DESC' # FROM https://stackoverflow.com/a/58623139/10362396

# commit
alias gc='git commit -v && gs'
alias gca='git add --all && git commit -v && gs'
alias gcaa='git commit -a --amend -C HEAD && gs' # Add uncommitted and unstaged changes to the last commit
alias gcam='git commit -v -am && gs'
alias gcamd='git commit --amend && gs'
alias gcm='git commit -v -m && gs'
alias gci='git commit --interactive && gs'
alias gcsam='git commit -S -am && gs'

# checkout
alias gcb='git checkout -b && gs'
alias gco='git checkout && gs'
alias gcob='git checkout -b && gs'
alias gcobu='git checkout -b ${USER}/ && gs'
alias gcom='git checkout $(get_default_branch) && gs'
alias gcpd='git checkout $(get_default_branch); git pull; git branch -D && gs'
alias gct='git checkout --track && gs'

# clone
alias gcl='git clone && gs'

# clean
alias gclean='git clean -fd && gs'

# cherry-pick
alias gcp='git cherry-pick && gs'
alias gcpx='git cherry-pick -x && gs'

# diff
alias gd='git diff'
alias gds='git diff --staged'
alias gdt='git difftool'

# archive
alias gexport='git archive --format zip --output'

# fetch
alias gf='git fetch --all --prune'
alias gft='git fetch --all --prune --tags && gs'
alias gftv='git fetch --all --prune --tags --verbose && gs'
alias gfv='git fetch --all --prune --verbose && gs'
alias gmu='git fetch origin -v; git fetch upstream -v; git merge upstream/$(get_default_branch) && gs'
alias gup='git fetch && git rebase && gs'

# ls-files
alias gu='git ls-files . --exclude-standard --others' # Show untracked files
alias glsut='gu'
alias glsum='git diff --name-only --diff-filter=U' # Show unmerged (conflicted) files

# gui
alias ggui='git gui'

# home
alias ghm='cd "$(git rev-parse --show-toplevel)"' # Git home

# merge
alias gm='git merge && gs'

# mv
alias gmv='git mv && gs'

# patch
alias gpatch='git format-patch -1 && gs'

# push
alias gp='git push && gs'
alias gpd='git push --delete && gs'
alias gpf='git push --force && gs'
alias gpo='git push origin HEAD && gs'
alias gpom='git push origin $(get_default_branch) && gs'
alias gpu='git push --set-upstream && gs'
alias gpunch='git push --force-with-lease && gs'
alias gpuo='git push --set-upstream origin && gs'
alias gpuoc='git push --set-upstream origin $(git symbolic-ref --short HEAD) && gs'

# pull
alias gl='git pull --rebase && gs'
alias glum='git pull upstream $(get_default_branch) && gs'
alias gpp='git pull --rebase && git push && gs'
alias glm='git pull && gs'

# remote
alias gr='git remote'
alias gra='git remote add'
alias grv='git remote -v'

# rm
alias grm='git rm && gs'

# rebase
alias grb='git rebase && gs'
alias grbc='git rebase --continue && gs'
alias grm='git rebase $(get_default_branch) && gs'
alias grmi='git rebase $(get_default_branch) -i && gs'
alias grma='GIT_SEQUENCE_EDITOR=: git rebase  $(get_default_branch) -i --autosquash && gs'
alias gprom='git fetch origin $(get_default_branch) && git rebase origin/$(get_default_branch) && git update-ref refs/heads/$(get_default_branch) origin/$(get_default_branch) && gs' # Rebase with latest remote

# reset
alias gus='git reset HEAD && gs'
alias grhh='git reset HEAD --hard && gs'
alias gpristine='git reset --hard && git clean -dfx && gs'

# status
alias gst='git status && gs'
alias gss='git status -s'

# shortlog
alias gcount='git shortlog -sn'
alias gsl='git shortlog -sn'

# show
alias gsh='git show'

# stash
alias gsth='git stash && gs'
alias gsthb='git stash branch && gs'
alias gsthd='git stash drop'
alias gsthl='git stash list'
alias gsthp='git stash pop && gs'  # kept due to long-standing usage
alias gsthpo='git stash pop && gs' # recommended for it's symmetry with gstpu (push)

## 'stash push' introduced in git v2.13.2
alias gsthpu='git stash push'
alias gsthpum='git stash push -m'

## 'stash save' deprecated since git v2.16.0, alias is now push
alias gsths='git stash push'
alias gsthsm='git stash push -m'

# submodules
alias gsu='git submodule update --init --recursive'


# colors
alias ls='ls --color=auto'
alias grep='grep --color=auto'

# List directory contents
alias sl=ls
alias la='ls -AF' # Compact view, show hidden
alias ll='ls -al'
alias l='ls -a'
alias l1='ls -1'
alias lf='ls -F'

# Shortcuts to edit startup files
alias vbrc='${VISUAL:-vim} ~/.bashrc'
alias vbpf='${VISUAL:-vim} ~/.bash_profile'

alias ..='cd ..'         # Go up one directory
alias cd..='cd ..'       # Common misspelling for going up one directory
alias ...='cd ../..'     # Go up two directories
alias ....='cd ../../..' # Go up three directories
alias -- -='cd -'        # Go back

# Shell History
alias h='history'
